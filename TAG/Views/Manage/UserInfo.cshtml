
@model TAG.Models.UserInfo

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
  ViewBag.Title = "UserInfo";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SaveUserInfo", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
  @Html.AntiForgeryToken()
  <h4>User profile Form</h4>
  <hr />
  @Html.ValidationSummary("", new { @class = "text-danger" })
  <div class="form-group">
    <p>Your First Name: @Html.TextBoxFor(x => x.FirstName) </p>
    <p>Your Last Name: @Html.TextBoxFor(x => x.LastName) </p>
    <p>Your email: @Html.TextBoxFor(x => x.EMailAddress1)</p>
    <p>Your phone: @Html.TextBoxFor(x => x.Telephone1)</p>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Update user information" class="btn btn-default" />
    </div>
  </div>
}
@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
